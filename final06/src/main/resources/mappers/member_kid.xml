<mapper namespace="kr.co.itwill.mapper.MemberMapper">

	<!-- 자녀 회원 등록 -->
	<!-- 기존에 등록된 부모와 1명 이상의 자녀가 있어야 하며, 이전에 등록된 자녀의 생년월일을 가져오는 쿼리임 -->
