<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- member.xml -->
<!-- 실행할 SQL문을 정의해놓은 파일 (DAO클래스 역할) -->
<!-- 주의사항 : 종결문자 ; 생략해야 함 -->
<!-- ★ namespace는 대체적으로 테이블명과 동일하게 지정함 -->

<mapper namespace="member">

	<!-- ? 기호를 대신하는 문법: 파라미터 바인딩 표기법 #{property(=변수명)} -->
	<!-- <insert id="insert" parameterType="kr.co.itwill.member.MemberDTO"> -->
	<insert id="join" parameterType="java.util.Map">
		INSERT INTO member_parent (p_id, p_passwd, p_name, p_birth, p_gender, p_tell, p_addr1, p_addr2, p_grade, p_date)
		VALUES (#{p_id}, #{p_passwd}, #{p_name}, #{p_birth}, #{p_gender}, #{p_tell}, #{p_addr1}, #{p_addr2}, #{p_grade}, #{p_date})
	</insert>
	
	<insert id="login" parameterType="java.util.Map"> <!-- form에 입력한 값을 전달하여 저장된 정보와 일치하면 로그인 성공, 정보가 없으면 로그인 실패 -->
		INSERT INTO member_parent (p_id, p_passwd)
		VALUES (#{p_id}, #{p_passwd})
	</insert>

	
</mapper>